{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "types": ["node"],
    "module": "preserve",
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
  },
  "include": ["src/**/*.ts"],
  "references": [],
    "exclude": [
    "dist",
    "./**/*.test.ts",
    "./**/*.spec.ts",
    "./**/*.test.tsx",
    "./**/*.spec.tsx",
    "./**/*.test.js",
    "./**/*.spec.js",
    "./**/*.test.jsx",
    "./**/*.spec.jsx"
  ]
}
